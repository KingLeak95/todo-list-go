FROM golang:1.24-bullseye AS test

WORKDIR /app
RUN apt-get update && apt-get install -y git sqlite3 libsqlite3-dev && rm -rf /var/lib/apt/lists/*

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Enable CGO for SQLite driver and run tests
ENV CGO_ENABLED=1
ENV PATH="/usr/local/go/bin:${PATH}"
CMD ["go", "test", "./..."]


